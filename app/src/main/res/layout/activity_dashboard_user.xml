<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back01"
    tools:context=".DashboardUserActivity">
    <RelativeLayout
        android:id="@+id/toolbarRlDashboard_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_toolbar02">
        <TextView
            android:id="@+id/title_Tv_Dashboard_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"
            android:text="Dashboard User"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/subTitle_Dashboard_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title_Tv_Dashboard_user"
            android:layout_centerHorizontal="true"
            android:text="abc@example.com"
            android:layout_marginBottom="10dp"
            android:textColor="@color/white" />
        <ImageView
            android:id="@+id/logoutBtn__Dashboard_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:src="@drawable/ic_logout_white"
            android:background="@android:color/transparent"/>

    </RelativeLayout>

</RelativeLayout>